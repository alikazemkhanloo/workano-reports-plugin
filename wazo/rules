#!/bin/sh

case "$1" in
build)
    python3 setup.py bdist -d dist/python3
    ;;

package)
    tar xvf dist/python3/workano-reports-plugin-*.tar.gz -C ${pkgdir}
    cp -R etc ${pkgdir}/

    ;;

install)
    systemctl restart wazo-call-logd
    ;;

uninstall)
    rm -f /etc/wazo-call-logd/conf.d/50-workano-reports-plugin.yml
    systemctl restart wazo-call-logd
    ;;

postrm) ;;

    *)
    echo "$0 called with unknown argument '$1'" >&2
    exit 1
    ;;
esac
